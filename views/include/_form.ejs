  <!--form handling-->
  <form action="/api/users" method="POST" id="add_user">
     <div class="new_user">
         <div class="form-group">
             <label for="name" class="text-light">Name</label>
             <input type="hidden" name="id" value="">
             <input type="text" name="name" value="" placeholder="Chukwudi Musa Temitayo">
         </div>
        <div class="form-group">
            <label for="name" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Country</label>
            <input type="text" name="country" value="" placeholder="Enter User Country">
        </div>
        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                 <input type="radio" id="radio-02" name="status" value="Active">
                 <label for="radio-02" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                 <input type="radio" id="radio-03" name="status" value="Inactive">
                 <label for="radio-03" class="radio-label">Inactive</label>
            </div>
         </div>
         <div class="form-group">
              <button type="submit" class="btn text-dark update">Save</button>
         </div>
     </div>
   </form>